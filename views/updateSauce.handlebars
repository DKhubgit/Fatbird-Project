<link rel="stylesheet" href="/css/updateSauce.css">
<div id="update-sauce-container" class="container-fluid mx-auto">
    <form id="update-sauce-form">
        <div class="form-group">
            <label for="update-sauce-name" id="update-sauce-title" data-id="{{sauce.id}}">Enter a New Name
                for
                {{sauce.title}}:
            </label>
            <input type="text" id="update-sauce-name" class="form-control">
        </div>
        <div class="form-group">
            <label for="update-sauce-desc" id="update-sauce-desc-label">Enter a description for
                {{sauce.title}}:
            </label>
            <input type="text" class="form-control" id="update-sauce-desc">
        </div>
        <div class="form-group">
            <label for="update-spicy-level" id="spice-question">What is the updated Spice Level? (optional)</label>
            <select id="update-spicy-level" class="form-control">
                <option value="0">0</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <button class="btn btn-danger" type="submit">Update {{sauce.title}} Sauce</button>
    </form>
    <br>
    <br>
    {{> userBack}}
</div>
<script src="/js/update-sauce.js"></script>