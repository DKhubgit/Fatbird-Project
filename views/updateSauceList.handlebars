<link rel="stylesheet" href="/css/updateSauceList.css">
<h2 id="sauce-update-title">Which Sauce Would You Like to Update?</h2>
<div id="update-sauce-list-container" class="container-fluid mx-auto">
    {{#each sauces as |sauce|}}
    <div class="sauce-title-container">
        <a href="/user/updateSauce/{{sauce.id}}" class="sauce-update-link">{{sauce.title}}</a>
    </div>
    {{/each}}

    <br>
    <br>
    {{> userBack}}
</div>